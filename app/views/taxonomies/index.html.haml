%h1 Taxonomies

%p= link_to 'Create New', :action => :new

%table
  %thead
    %tr
      %th Name
      %th Action
  %tbody
    - for taxonomy in @taxonomies
      %tr{ :id => "taxononmy-#{taxonomy.id}" }
        %th= link_to taxonomy.name, taxonomy
        %td
          = link_to 'Edit', ['edit', taxonomy]
          = link_to 'Delete', ['delete', taxonomy]

