:javascript
  $(document).ready(function() {
    $('form').submit(function(event) {
      var $this = $(this)
      event.preventDefault()
      
      $.ajax({
        url: $this.attr('action'),
        type: $this.attr('method').toUpperCase(),
        data: $this.serialize(),
        success: function(data) {
          $('#result').val(data)
        }
      });
    })
  })